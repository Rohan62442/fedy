{
	"icon": "hb-icon",
	"label": "HandBrake",
	"description": "The open source video transcoder.",
	"category": "Apps",
	"scripts": {
		"exec": {
			"label": "Install",
			"command": "run-as-root -s install.sh"
		},
		"undo": {
			"label": "Remove",
			"command": "run-as-root dnf -y --setopt clean_requirements_on_remove=1 erase HandBrake-gui HandBrake-cli"
		},
		"status": { "command": "rpm --quiet --query HandBrake-gui HandBrake-cli" }
	}
}
